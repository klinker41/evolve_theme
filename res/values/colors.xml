<resources>

    <!-- You HAVE to include the first 8 defined colors always -->

    <!-- Main theme color for various parts on the screen, more of these things will be added in the future -->
    <color name="theme_color">#FF8800</color>

    <!-- the text color drawn on the message for the body -->
    <color name="textColorSent">#020202</color>
    <color name="textColorReceived">#020202</color>

    <!-- the text color drawn on the message for the date -->
    <color name="dateColorSent">#555555</color>
    <color name="dateColorReceived">#555555</color>

    <!-- the link color for any links in a message text -->
    <color name="link_color">#ff8800</color>
    <color name="night_link_color">#ff8800</color>

    <!-- the message entry color is for any message entry areas in the main window and the new message window -->
    <color name="messageEntryColor">#020202</color>

    <!-- the color of the background for the drawer -->
    <color name="drawerBackground">#ffffff</color>

    <!-- the color of the conversation drawer text -->
    <color name="conversationTextColor">#020202</color>

    <!-- the color of the dividers in the message list, setting to #00000000 will make them disappear -->
    <color name="dividerColor">#02000000</color>

    <!-- the background color for the conversations, this is what shows behind the messages -->
    <color name="backgroundColor">#dddddd</color>

